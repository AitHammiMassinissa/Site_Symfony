{% extends 'Layouts/base.html.twig'%}
{% block title description.getNomFormation() %}
{% block body %}
    <article class="detail bg-white rounded shadow mb-5 ">
                <div class="row">
                    <div class="col-md-4 mx-auto">
                        <img src="{{ (description.getImageName() ? vich_uploader_asset(description) :asset('images/nondisponible.jpg') )| imagine_filter('squared_thumbnail_medium') }}"
                             alt="{{ description.getNomFormation() }}"
                             class=" tl w-100 "/>
                    </div>
                </div>
                 <div class="mt-3">
                     <h1 class="text-center text-success mt-3">
                                 {{description.getNomFormation()}}
                     </h1>
                 </div>

                    <div class="row">
                        <div class="col-md-4 mx-auto">
                            <img class="tl w-100 " src="{{ asset('images/ça_veut_dire_quoi.jpg') }}">
                        </div>
                    </div>

                        <div class="mt-3">
                            <h2 class=" h5 text-center text-primary mt-3" >Description</h2>
                            <p class="pl-3 pr-3 pb-3 text-break">
                                {{description.getDescriptionFormation()}}
                            </p>
                        </div>


                    <div class="row">
                        <div class="col-md-4 mx-auto">
                            <img class="tl w-100 " src="{{ asset('images/Objectifs.jpg') }}">
                        </div>
                    </div>

                        <div class="mt-3">
                            <h2 class="h5 text-center text-primary mt-3" >Objectifs</h2>
                            <p class="pl-3 pr-3 pb-3 text-break">
                                {{description.getObjectif()}}
                            </p>
                        </div>



                    <div class="row">
                        <div class="col-md-4 mx-auto">
                            <img class="tl w-100 " src="{{ asset('images/pré_requis.jpg') }}">
                        </div>
                    </div>

                        <div class="mt-3">
                            <h2 class="h5 text-center text-primary mt-3" >Prérequis</h2>
                            <p class="pl-3 pr-3 pb-3 text-break">
                                {{description.getPrerequis()}}
                            </p>
                        </div>
    </article>
    <div class="row">
        <div class="col-lg mt-5 mb-3 ml-3 mr-3 detail bg-transparent rounded shadow ">
       <h1 class="text-center mt-3 ml-3 mr-3 mb-3">Les dates  de la formation</h1>
      <table class="table text-center">
        <thead class="thead-dark">
          <tr>
            <th>Date dans 3 mois</th>
            <th>Date dans 6 mois</th>
            <th>Date dans 1 an </th>
            <th>Nombre de jours </th>
            <th>Disponibilité de la formation</th>
            <th>Lieu de la formation</th>
          </tr>
        </thead>
        <tbody>
          <tr>
        
                <td>{{description.getDateDebTroisMois()|date('d-m-y') }}</td>
                <td>{{description.getDateDebSixMois()|date('d-m-y') }}</td> 
                <td>{{description.getDateDebUnAns()|date('d-m-y') }}</td>
                <td>{{description.getNombreJour()}}</td>
                <td>{{description.getDisponibilite()}}</td>
                <td>{{description.getLieu()}}</td>
            
          </tr>
        </tbody>
      </table>
   
    </div>
    </div>
    <div class="row">
        <div class="col-lg">
            <article class="mt-5 mb-3 ml-3 mr-3 detail bg-transparent rounded shadow ">
                {{ form_start(form_date) }}
                <h1 class="text-center mt-3 ml-3 mr-3 mb-3">S'inscrire à une formation ou faire un devis </h1>
                <div class="mt-3 ml-3 mr-3 mb-3">
                {{ form_row(form_date.Periode) }}
                </div>
                <div class="mt-3 ml-3 mr-3 ">
                {{ form_row(form_date.Mode) }}
                </div>
               
              
        <div class="mb-2 btn-lg text-center">
                   <button  type="submit" class=" btn btn-light btn-outline-success btn-block">
                       S'inscrire
                    </button>
                     <button  type="btn" class=" btn btn-light btn-outline-success btn-block">
                   <a class="text-decoration-none" href="{{ path('formation_devis',{id:description.id})}}" > 
                       Editer un devis
                       </a>
                  </button>
                   </div>
                   
                 {{ form_end(form_date)}}
                
           </article>  
        </div>
     </div>
    <div class="row mb-5">
        <div class="col-lg">
            <article class="mt-5 mb-3 ml-3 mr-3 detail bg-transparent rounded shadow ">
                {{ form_start(form_propose) }}
                <h1 class="text-center mt-3 ml-3 mr-3 mb-3">Proposer une date</h1>
                <div class="mt-3 ml-3 mr-3 mb-3">{{ form_row(form_propose.DateD) }}</div>
                <div class="mt-3 ml-3 mr-3 ">{{ form_row(form_propose.Disponibilite) }}</div>
                <div class="mt-3 ml-3 mr-3 mb-3">{{ form_row(form_propose.NombreP) }}</div>
                <div class="mt-3 ml-3 mr-3 ">{{ form_row(form_propose.Nom) }}</div>
                <div class="mt-3 ml-3 mr-3 mb-3">{{ form_row(form_propose.Prenom) }}</div>
                <div class="mt-3 ml-3 mr-3 ">{{ form_row(form_propose.email) }}</div>
                <div class="mt-3 ml-3 mr-3 ">{{ form_row(form_propose.Telephone) }}</div>
                <div class="mt-3 ml-3 mr-3 mb-3">{{ form_row(form_propose.Fonction) }}</div>
                <div class="mt-3 ml-3 mr-3 ">{{ form_row(form_propose.Societe) }}</div>
                <div class="mt-3 ml-3 mr-3 ">{{ form_row(form_propose.Message) }}</div>
                <div class="mb-2 btn-lg text-center">
                    <button type="submit" class="btn btn-light btn-outline-success">
                      Envoyer
                    </button>
                 </div>
                 
                {{ form_end(form_propose) }}
                    
            </article>
        </div>
    </div>



{% endblock %}
