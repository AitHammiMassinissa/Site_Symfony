{% extends 'Layouts/base.html.twig' %}

{% block title %}Connexion!{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="text-success h2 text-center mb-3 mt-3 my-5">Saisissez vos identifiants</h1>
            <p class="mb-5 text-center text-muted">Nos formations n'attendent que vous !! ðŸ˜Š ðŸ˜š</p>
            <form method="post">
                {% if error %}
                    <div class="alert alert-error rounded " role="alert">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
                <div class="form-group" >
                    <label for="email">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="email" class="form-control" required autofocus>


                </div>
                <div class="form-group" >
                    <label for="password">Mot de passe</label>
                    <input type="password" name="password" id="password" class="form-control" required>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="d-flex justify-content-between">
                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="_remember_me" id="_remember_me">
                            <label class="form-check-label" for="_remember_me">Se souvenir de moi</label>
                        </div>
                    </div>
                    <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublier ??</a>
                </div>



                <button class="btn btn-lg btn-block btn-primary" type="submit">
                    Connexion
                </button>
                <p class="mt-5 mb-3 text-center text-muted">Pas encore de compte ? <a href="{{ path('app_register') }}">CrÃ©e un compte</a></p>
            </form>
        </div>

    </div>

{% endblock %}
