{% extends 'Layouts/base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            {% for flashError in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}
            <h1 class="text-success text-md-center">Réinitialisez votre mot de passe</h1>
            <div class="mt-3 mb-3 text-center text-muted">

                    Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.

            </div>
            {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}


            <button class="btn btn-block btn-primary btn-outline-success text-white">Réinitialisation</button>
            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}