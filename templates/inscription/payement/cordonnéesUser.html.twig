{% extends 'Layouts/base.html.twig' %}
{% block title 'Modifier cordonnées' %}
{% block body %}
    <div class="row mb-5">
        <div class="col-md-6 mx-auto">
            <h1 class="my-5 text-primary  text-center"> Vos cordonnées</h1>
       {{ form_start(formulaireuser) }}

            <div class="row">
                <div class="col-md-6">
                    {{ form_row(formulaireuser.firstName) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(formulaireuser.lastName) }}
                </div>
            </div>
            {{ form_row(formulaireuser.email) }}
            {{ form_row(formulaireuser.civilite) }}
            {{ form_row(formulaireuser.numero) }}
            <button type="submit" class="mt-3 mb-3 btn btn-primary btn-lg btn-block">
                Appliquer les changements
            </button>
       {{ form_end(formulaireuser) }}    
        </div>
    </div>
{% endblock %}