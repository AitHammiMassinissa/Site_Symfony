{% extends 'Layouts/base.html.twig' %}
{% block title 'Modifier profile' %}
{% block body %}
    <div class="row mb-5">
        <div class="col-md-6 mx-auto">
            <h1 class="my-5 text-primary  text-center"> Modifier le profile</h1>
       {{ form_start(form) }}

            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.firstName) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.lastName) }}
                </div>
            </div>
            {{ form_row(form.email) }}
            {{ form_row(form.civilite) }}
            {{ form_row(form.numero) }}
            <button type="submit" class="mt-3 mb-3 btn btn-primary btn-lg btn-block">
                Appliquer les changements
            </button>
       {{ form_end(form) }}
        </div>
    </div>
{% endblock %}